# ============================================================================
# Prayer Reminder Bot - Environment Configuration
# ============================================================================

# Target chat ID where the daily prayer poll will be sent
# Format: 
#   - For individuals: phoneNumber@c.us (e.g., 201234567890@c.us)
#   - For groups: groupId@g.us (you can get this from bot logs in test mode)
TARGET_CHAT_ID=120363404172393895@g.us

# Timezone for scheduling the daily poll (default: Africa/Cairo)
# Use standard IANA timezone names (e.g., Asia/Riyadh, Asia/Dubai, Europe/London)
# List of timezones: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=Africa/Cairo

# Test mode - if set to true, sends a poll immediately when bot starts
# Useful for testing without waiting for 9 AM
# Set to 'false' for production use
TEST_MODE=false

# Cron pattern: '0 9 * * *' means:
# - 0: At minute 0
# - 9: At hour 9 (9 AM)
# - *: Every day of the month
# - *: Every month
# - *: Every day of the week
CRON_PATTERN="0 9 * * *"