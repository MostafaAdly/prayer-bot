{
	"name": "prayer-bot",
	"version": "1.0.0",
	"description": "WhatsApp bot for daily prayer reminders with reusable bot class",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "yarn build && node dist/index.js",
		"dev": "ts-node src/index.ts",
		"watch": "tsc --watch",
		"pm2:start": "yarn build && pm2 start ecosystem.config.js",
		"pm2:stop": "pm2 stop prayer-bot",
		"pm2:restart": "pm2 restart prayer-bot",
		"pm2:delete": "pm2 delete prayer-bot",
		"pm2:logs": "pm2 logs prayer-bot",
		"pm2:status": "pm2 status",
		"pm2:monit": "pm2 monit"
	},
	"keywords": [
		"whatsapp",
		"bot",
		"prayer",
		"reminder",
		"islam",
		"muslim"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"whatsapp-web.js": "^1.34.1",
		"qrcode-terminal": "^0.12.0",
		"node-cron": "^3.0.3",
		"dotenv": "^16.4.5"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/node-cron": "^3.0.11",
		"@types/qrcode-terminal": "^0.12.2",
		"pm2": "^5.3.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
